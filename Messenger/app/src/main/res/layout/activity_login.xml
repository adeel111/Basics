<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorBackground"
            android:gravity="center"
            tools:context=".LoginActivity">

        <EditText
                android:id="@+id/edit_text_login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="italic"
                android:background="@drawable/edit_text_design"
                android:paddingStart="@dimen/paddingStart"
                android:paddingTop="@dimen/paddingTop"
                android:paddingBottom="@dimen/paddingBottom"
                android:paddingEnd="@dimen/paddingEnd"
                android:inputType="textEmailAddress"
                android:layout_marginStart="@dimen/marginStartEnd"
                android:layout_marginEnd="@dimen/marginStartEnd"
                android:layout_marginTop="@dimen/marginTopBottom"
                android:layout_marginBottom="@dimen/marginTopBottom"
                android:textSize="20sp" tools:ignore="Autofill,HardcodedText"/>

        <EditText
                android:id="@+id/edit_text_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="italic"
                android:inputType="textPassword"
                android:background="@drawable/edit_text_design"
                android:paddingStart="@dimen/paddingStart"
                android:paddingTop="@dimen/paddingTop"
                android:paddingBottom="@dimen/paddingBottom"
                android:paddingEnd="@dimen/paddingEnd"
                android:layout_marginStart="@dimen/marginStartEnd"
                android:layout_marginEnd="@dimen/marginStartEnd"
                android:layout_marginTop="@dimen/marginTopBottom"
                android:layout_marginBottom="@dimen/marginTopBottom"
                android:textSize="20sp" tools:ignore="Autofill,HardcodedText"/>

        <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_design"
                android:paddingStart="@dimen/paddingStart"
                android:paddingTop="@dimen/paddingTop"
                android:paddingBottom="@dimen/paddingBottom"
                android:paddingEnd="@dimen/paddingEnd"
                android:text="@string/login_button_text"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:layout_marginStart="@dimen/marginStartEnd"
                android:layout_marginEnd="@dimen/marginStartEnd"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="@dimen/marginTopBottom"
                android:textSize="20sp"
                style="?android:attr/borderlessButtonStyle"/>

        <TextView
                android:id="@+id/text_view_have_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_text"
                android:textStyle="italic|bold"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:layout_marginTop="@dimen/marginTopBottom"/>
    </LinearLayout>
</ScrollView>