<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
            android:id="@+id/linear_layout_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="4"
            android:background="@color/colorBackground"
            tools:context=".MainActivity">

        <LinearLayout
                android:id="@+id/linear_layout_spin_kit_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="vertical">

            <com.github.ybq.android.spinkit.SpinKitView
                    android:id="@+id/spin_kit_view_register"
                    style="@style/SpinKitView.Small.ThreeBounce"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:SpinKit_Color="@color/colorWhite"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/linear_layout_one"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center|bottom">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/register_circle_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/colorPrimaryDark"
                    android:padding="@dimen/paddingTop"
                    android:layout_marginTop="@dimen/marginTopBottom"
                    android:src="@drawable/common_pic_place_holder"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/linear_layout_two"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:gravity="center|top"
                android:layout_marginTop="@dimen/marginStartEnd">

            <EditText
                    android:id="@+id/edit_text_register_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="UserName"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="italic"
                    android:background="@drawable/edit_text_design"
                    android:paddingStart="@dimen/paddingStart"
                    android:paddingTop="@dimen/paddingTop"
                    android:paddingBottom="@dimen/paddingBottom"
                    android:paddingEnd="@dimen/paddingEnd"
                    android:inputType="text"
                    android:layout_marginStart="@dimen/marginStartEnd"
                    android:layout_marginEnd="@dimen/marginStartEnd"
                    android:layout_marginTop="@dimen/marginTopBottom"
                    android:layout_marginBottom="@dimen/marginTopBottom"
                    android:textSize="20sp" tools:ignore="Autofill,HardcodedText"/>

            <EditText
                    android:id="@+id/edit_text_register_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="italic"
                    android:background="@drawable/edit_text_design"
                    android:paddingStart="@dimen/paddingStart"
                    android:paddingTop="@dimen/paddingTop"
                    android:paddingBottom="@dimen/paddingBottom"
                    android:paddingEnd="@dimen/paddingEnd"
                    android:inputType="textEmailAddress"
                    android:layout_marginStart="@dimen/marginStartEnd"
                    android:layout_marginEnd="@dimen/marginStartEnd"
                    android:layout_marginTop="@dimen/marginTopBottom"
                    android:layout_marginBottom="@dimen/marginTopBottom"
                    android:textSize="20sp" tools:ignore="Autofill,HardcodedText"/>

            <EditText
                    android:id="@+id/edit_text_register_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="italic"
                    android:inputType="textPassword"
                    android:background="@drawable/edit_text_design"
                    android:paddingStart="@dimen/paddingStart"
                    android:paddingTop="@dimen/paddingTop"
                    android:paddingBottom="@dimen/paddingBottom"
                    android:paddingEnd="@dimen/paddingEnd"
                    android:layout_marginStart="@dimen/marginStartEnd"
                    android:layout_marginEnd="@dimen/marginStartEnd"
                    android:layout_marginTop="@dimen/marginTopBottom"
                    android:layout_marginBottom="@dimen/marginTopBottom"
                    android:textSize="20sp" tools:ignore="Autofill,HardcodedText"/>

            <Button
                    android:id="@+id/register_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_design"
                    android:paddingStart="@dimen/paddingStart"
                    android:paddingTop="@dimen/paddingTop"
                    android:paddingBottom="@dimen/paddingBottom"
                    android:paddingEnd="@dimen/paddingEnd"
                    android:text="@string/register_button_text"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:layout_marginStart="@dimen/marginStartEnd"
                    android:layout_marginEnd="@dimen/marginStartEnd"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="@dimen/marginTopBottom"
                    android:textSize="20sp"
                    style="?android:attr/borderlessButtonStyle"/>

            <TextView
                    android:id="@+id/text_view_have_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_text"
                    android:textStyle="italic|bold"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:layout_marginTop="@dimen/marginTopBottom"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>