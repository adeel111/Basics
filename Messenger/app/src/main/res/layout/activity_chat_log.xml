<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".ChatLogActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/edit_text_enter_message"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Enter Message"
            android:background="@color/colorWhite"
            app:layout_constraintEnd_toStartOf="@+id/button_send_message"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_chat_log"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="Send"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/button_send_message"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_design"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/edit_text_enter_message"
            android:id="@+id/recycler_view_chat_log"/>
</android.support.constraint.ConstraintLayout>