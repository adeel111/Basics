    <style name="ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="LoginActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
